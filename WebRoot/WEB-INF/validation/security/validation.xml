					resource="false" position="1" />
				<var>
					<var-name>maxlength</var-name>
					<var-value>2</var-value>
				</var>
			</field>
			<field property="menuItem.description"
				depends="maxlength">
				<arg key="menuItemAF.menuItem.description.displayname"
					position="0" bundle="security" />
				<arg name="maxlength" key="${var:maxlength}"
					resource="false" position="1" />
				<var>
